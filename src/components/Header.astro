---
const { description } = Astro.props;
import Logo from "../images/logo.svg";
import HeroLeft from "../images/illustration-hero-left.svg";
import HeroRight from "../images/illustration-hero-right.svg";
import Squiggle from "../images/bg-hero-squiggle.svg";
import Mouse from "../images/icon-scroll.svg";
import HeroMobile from "../images/illustration-hero-mobile.png";
import HeroTabletLeft from "../images/illustration-hero-mobile-left-md.png";
import HeroTabletRight from "../images/illustration-hero-mobile-md.png";
---

<section class="header-section">
  <img src={Logo} />
  <div class="illustration-mobile">
    <img src={HeroMobile} />
  </div>
  <div class="content">
    <div class="illustrations">
      <div class="illustration-left">
        <img src={HeroLeft} />
      </div>
      <div class="illustration-left-tablet">
        <img src={HeroTabletLeft} />
      </div>

      <div class="illustration-center">
        <img src={Squiggle} />
      </div>

      <div class="illustration-right-tablet">
        <img src={HeroTabletRight} />
      </div>
      <div class="illustration-right">
        <img src={HeroRight} />
      </div>
    </div>

    <div class="middle-content">
      <h1>Get paid for the work you <span>love</span> to do.</h1>
      <p>{description}</p>
      <img class="mouse" src={Mouse} />
    </div>
  </div>
</section>

<style>
  .content {
    padding-top: 100px;
  }
  .mouse {
    margin-top: 60px;
  }
  .header-section > img {
    margin-top: 20px;
  }
  .header-section .content {
    margin: 0 auto;
    max-width: 60ch;
    display: grid;
  }

  .illustration-center {
    position: absolute;
  }

  .illustration-left {
    position: absolute;
    left: 0;
  }
  .illustration-right {
    position: absolute;
    right: 0;
  }

  .middle-content {
    display: block;
    text-align: center;
    position: relative;
    z-index: 999;
    max-width: 600px;
    width: 100%;
  }

  span {
    color: var(--celeste);
  }
  h1 {
    color: var(--white);
    font-size: 3rem;
    line-height: 1;
    margin-top: 100px;
    padding-bottom: 20px;
    max-width: 100%;
  }
  p {
    color: var(--steel);
  }
  .illustration-mobile {
    display: none;
  }
  .illustration-left-tablet,
  .illustration-right-tablet {
    display: none;
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 2.25rem;
      padding-inline: 30px;
    }
    p {
      padding-inline: 30px;
      line-height: 1.7;
    }
    .illustration-left-tablet,
    .illustration-right-tablet {
      position: absolute;
      display: block;
    }

    .illustration-left-tablet {
      left: 0;
    }
    .illustration-right-tablet {
      right: 0;
    }

    .illustration-right,
    .illustration-left {
      display: none;
    }

    .illustration-center img {
      width: 100%;
    }
  }
  @media (max-width: 425px) {
    .illustration-left-tablet,
    .illustration-right-tablet {
      display: none;
    }
    .header-section {
      text-align: center;
    }
    .illustration-center {
      display: none !important;
    }
    .content {
      padding-top: 0;
    }
    .illustration-mobile {
      display: block;
    }

    .illustration-left,
    .illustration-right {
      display: none;
    }

    .illustration-left img,
    .illustration-right img {
      width: 50%;
      height: auto;
    }
    .illustration-mobile img {
      padding-top: 50px;
      width: 100%;
    }

    h1,
    p {
      padding-inline: 0;
    }
    .mouse {
      margin-top: 40px;
    }
  }
</style>
